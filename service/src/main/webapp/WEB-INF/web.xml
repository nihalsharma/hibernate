<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <display-name>TM-MarketplaceId-Service</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!--<listener>-->
        <!--<display-name>Startup</display-name>-->
        <!--<listener-class>-->
            <!--com.tm.midservice.web.TMMIDServiceStartUpListener-->
        <!--</listener-class>-->
    <!--</listener>-->

    <listener>
        <listener-class>
            org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>tmmidservice</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.tm.midservice.web.TMMIDServiceApplication</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>tmmidservice</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <listener>
        <display-name>Startup</display-name>
        <listener-class>
            com.tm.midservice.web.AppContextListener
        </listener-class>
    </listener>
    <context-param>
        <param-name>com.tm.com.tm.midservice.service.scan</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/api</param-value>
    </context-param>
</web-app>